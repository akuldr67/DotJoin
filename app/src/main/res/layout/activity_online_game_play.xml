<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnlineGamePlay"
    android:id="@+id/online_constraint">
    <ImageView
        android:id="@+id/online_boardImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="100px"
        android:visibility="visible"/>
    <View
        android:id="@+id/online_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/online_player1"
        android:padding="5dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="20sp"
        />

    <ProgressBar
        android:id="@+id/online_bar_player1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="15dp"
        app:layout_constraintLeft_toLeftOf="@id/online_player1"
        app:layout_constraintTop_toBottomOf="@id/online_player1"
        android:progress="100"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/online_player2"
        android:padding="5dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="20sp"
        />
    <ProgressBar
        android:id="@+id/online_bar_player2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="15dp"
        app:layout_constraintLeft_toLeftOf="@id/online_player2"
        app:layout_constraintTop_toBottomOf="@id/online_player2"
        android:progress="100"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/online_player3"
        android:padding="5dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textSize="20sp"
        />
    <ProgressBar
        android:id="@+id/online_bar_player3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="15dp"
        app:layout_constraintLeft_toLeftOf="@id/online_player3"
        app:layout_constraintBottom_toTopOf="@id/online_player3"
        android:progress="100"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="50dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_chat_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/online_player4"
        app:layout_constraintStart_toEndOf="@+id/online_player3"
        android:scaleY="1.5"

        />

    <TextView
        android:id="@+id/online_player4"
        android:padding="5dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textSize="20sp"/>

    <ProgressBar
        android:id="@+id/online_bar_player4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="15dp"
        app:layout_constraintLeft_toLeftOf="@id/online_player4"
        app:layout_constraintBottom_toTopOf="@id/online_player4"
        android:progress="100"
        android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>