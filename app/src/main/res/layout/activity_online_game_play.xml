<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnlineGamePlay"
    android:id="@+id/online_constraint">
    <ImageView
        android:id="@+id/online_boardImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="100px"
        android:visibility="visible"/>

    <View
        android:id="@+id/online_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/online_player1"
        android:padding="5dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="20sp"
        />

    <ProgressBar
        android:id="@+id/online_bar_player1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="15dp"
        app:layout_constraintLeft_toLeftOf="@id/online_player1"
        app:layout_constraintTop_toBottomOf="@id/online_player1"
        android:progress="100"
        android:visibility="invisible"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/online_bar_player1"
        app:layout_constraintTop_toBottomOf="@+id/online_bar_player1"
        >
        <ImageView
            android:id="@+id/player1_red_dot_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/red_dot"
            android:layout_margin="5dp"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/player1_red_dot_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/red_dot"
            android:layout_margin="5dp"
            android:visibility="invisible"/>
