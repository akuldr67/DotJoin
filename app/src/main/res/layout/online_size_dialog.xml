<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_background"
    tools:context=".WaitingPlace">
    <TextView
        android:id="@+id/online_size_dialog_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Select Board Size"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:padding="10dp"/>
    <RadioGroup
        android:id="@+id/online_size_dialog_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/online_size_dialog_heading"
        android:layout_margin="15dp"
        android:background="#00ffffff"
        >

        <RadioButton
            android:id="@+id/online_size_dialog_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7.5dp"
            android:background="@drawable/radio_button_background"
            android:textColor="@drawable/radio_button_text_color"
            android:textSize="15sp"
            android:text="3*3"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="5dp"
            android:onClick="onSizeClicked"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/online_size_dialog_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7.5dp"
            android:background="@drawable/radio_button_background"
            android:textColor="@drawable/radio_button_text_color"
            android:textSize="15sp"
            android:text="4*4"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="5dp"
            android:onClick="onSizeClicked"/>
        <RadioButton
            android:id="@+id/online_size_dialog_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7.5dp"
            android:background="@drawable/radio_button_background"
            android:textColor="@drawable/radio_button_text_color"
            android:textSize="15sp"
            android:text="5*5"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="5dp"
            android:onClick="onSizeClicked"/>
        <RadioButton
            android:id="@+id/online_size_dialog_six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7.5dp"
            android:background="@drawable/radio_button_background"
            android:textColor="@drawable/radio_button_text_color"
            android:textSize="15sp"
            android:text="6*6"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="5dp"
            android:onClick="onSizeClicked"/>
        <RadioButton
            android:id="@+id/online_size_dialog_seven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7.5dp"
            android:background="@drawable/radio_button_background"
            android:textColor="@drawable/radio_button_text_color"
            android:textSize="15sp"
            android:text="7*7"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="5dp"
            android:onClick="onSizeClicked"/>

    </RadioGroup>
    <Button
        android:id="@+id/online_start_game_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/online_size_dialog_radio_group"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="25dp"
        android:background="@drawable/selected_button_background"
        android:textColor="#000000"
        android:text="Start Game"
        android:textSize="20sp"
        android:padding="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>