<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_activity_background"
    tools:context=".MainActivity"
    >

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/LL2"
        app:srcCompat="@drawable/ic_settings_black_24dp"
        android:scaleY="1.3"
        android:scaleX="1.3"
        android:onClick="showPopupMenu"
        />

    <LinearLayout
        android:id="@+id/LL2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/main_button_single_player"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Single Player"
            android:layout_margin="20dp"
            />
        <Button
            android:id="@+id/main_button_multi_offline"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Multi Player"
            android:layout_margin="20dp"
            />
        <Button
            android:id="@+id/main_button_multi_online"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Play with Friends"
            android:layout_margin="20dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>